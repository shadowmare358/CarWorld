@model CarWorld.Models.Rating

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.Title" class="control-label"></label>
                <select asp-for="CarID" class="form-control" asp-items="ViewBag.CarID"></select>
            </div>
            <label asp-for="Score" class="control-label"></label>
            <div class="rating">
                <input asp-for="Score" type="radio" name="Score" value="10" id="10"><label for="10">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="9" id="9"><label for="9">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="8" id="8"><label for="8">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="7" id="7"><label for="7">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="6" id="6"><label for="6">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="5" id="5"><label for="5">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="4" id="4"><label for="4">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="3" id="3"><label for="3">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="2" id="2"><label for="2">☆</label>
                <input asp-for="Score" type="radio" name="Score" value="1" id="1"><label for="1">☆</label>
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
